%h1 Listing shoutboxes
%table
  %tr
    %th Created at
    %th Name
    %th Message
  - for shoutbox in @shoutboxes
    %tr
      %td= render_datetime shoutbox.created_at
      %td= render_nickname shoutbox.name
      %td= h shoutbox.message
      %td= link_to 'Show', admin_comment_path(shoutbox)
      %td= link_to 'Edit', edit_admin_comment_path(shoutbox)
      %td.destroy= link_to 'Destroy', admin_comment_path(shoutbox)
%div{:style => "text-align: center; padding-top: 1em"}
  = will_paginate @shoutboxes, :inner_window => 2, :outer_window => 0

