%h1 Listing comments

%table
  %tr
    %th id
    %th date
    %th comment
    %th by
    %th on
  - for comment in @comments
    %tr
      %td= comment.id
      %td= render_datetime comment.created_at
      %td= h comment.message
      %td= render_nickname comment.name
      %td
        = comment.demo.players.map{|player| render_linked_player(player)}.join(', ')
        on #{render_linked_map comment.demo.map}
      %td= link_to 'Watch demo', :controller => '/demos', :action => 'show', :id => comment.demo
      %td= link_to 'Show', admin_comment_path(comment)
      %td= link_to 'Edit', edit_admin_comment_path(comment)
      %td.destroy= link_to 'Destroy', admin_comment_path(comment)

%div{:style => "text-align: center; padding-top: 1em"}
  = will_paginate @comments, :inner_window => 2, :outer_window => 0

